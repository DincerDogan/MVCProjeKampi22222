
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Card</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <br />
    <div class="container">
        
      <br />
        <div class="card-columns">
            <div class="card bg-primary">
                <div class="card-body text-center">
                    <h6 >Toplam Kategori Sayisi</h6>
                    <p class="card-text">@ViewBag.dgr</p>
                </div>
            </div>
            <div class="card bg-warning">
                <div class="card-body text-center">
                    <h6>Adında A Harfi Geçen Yazar Sayisi</h6>
                    <p class="card-text">@ViewBag.writer</p>
                </div>
            </div>
            <div class="card bg-success">
                <div class="card-body text-center">
                    <h6>Teknoloji Kategorisindeki Başlık Sayısı</h6>
                    <p class="card-text">@ViewBag.heading</p>
                </div>
            </div>
            <div class="card bg-danger">
                <div class="card-body text-center">
                    <h6>En Fazla Başlığa Sahip Kategori </h6>
                   <p class="card-text">@ViewBag.ctgrname</p>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6>Kategori Durumu True Olanlar İle False Olanlar Arasındaki Fark</h6>
                    <p class="card-text"> @ViewBag.statusctgr </p>
                </div>
            </div>
           
        </div>
    </div>

</body>
</html>
