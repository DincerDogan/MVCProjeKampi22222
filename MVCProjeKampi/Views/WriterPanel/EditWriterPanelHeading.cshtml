@model EntityLayer.Concreate.Heading
@{
    ViewBag.Title = "EditWriterPanelHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<br />
@using (Html.BeginForm("EditWriterPanelHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-check form-group">
        
        @Html.HiddenFor(x => x.HeadingId)
        @Html.HiddenFor(x=>x.HeadingDate)
        @Html.HiddenFor(x=>x.WriterId)
        <br />
        @Html.Label("Baslık Adi")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
      
      

        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        <br />
       
        <button class="btn btn-info">Edit Heading</button>
    </div>
}


